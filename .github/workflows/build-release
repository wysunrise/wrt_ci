```yaml
# .github/workflows/build-release.yml
# Adapted from the original file you provided.
# Changes:
# - Trigger changed to manual (workflow_dispatch) with an input for target device
# - permissions.contents set to write so the workflow can create/releases and upload assets
# - Added an optional step to apply a repo-provided .config for ZTE-E8820S
# - At the end the compiled firmware/packages/buildinfo are uploaded to a GitHub Release
# - Uses ncipollo/release-action to create the release and upload files
on:
  workflow_dispatch:
    inputs:
      target:
        description: 'Target device (example: ZTE-E8820S)'
        required: false
        default: 'ZTE-E8820S'
      publish_to_release:
        description: 'Create GitHub Release and upload firmware'
        required: false
        default: 'true'

permissions:
  contents: write

name: OpenWrt-CI - manual build & release

jobs:
  build_openwrt:
    name: Build OpenWrt Firmware
    runs-on: ubuntu-22.04

    steps:
      - name: Space cleanup and Initialization environment
        env:
          DEBIAN_FRONTEND: noninteractive
        run: |
          docker image prune -f
          sudo -E rm -rf /usr/share/dotnet /etc/mysql /etc/php /etc/apt/sources.list.d /usr/local/lib/android
          sudo -E apt-mark hold grub-efi-amd64-signed
          sudo -E apt update
          sudo -E apt -y purge azure-cli* docker* ghc* zulu* llvm* firefox google* dotnet* powershell* openjdk* mysql* php* mongodb* dotnet* snap*
          sudo -E apt -y full-upgrade
          sudo -E apt -y install ack antlr3 asciidoc autoconf automake autopoint binutils bison build-essential bzip2 ccache clang cmake cpio curl device-tree-compiler flex gawk gcc-multilib g++-multilib gettext genisoimage git gperf haveged help2man intltool libc6-dev-i386 libelf-dev libfuse-dev libglib2.0-dev libgmp3-dev libltdl-dev libmpc-dev libmpfr-dev libncurses5-dev libncursesw5-dev libpython3-dev libreadline-dev libssl-dev libtool llvm lrzsz msmtp ninja-build p7zip p7zip-full patch pkgconf python3 python3-pyelftools python3-setuptools qemu-utils rsync scons squashfs-tools subversion swig texinfo uglifyjs upx-ucl unzip vim wget xmlto xxd zlib1g-dev
          sudo -E systemctl daemon-reload
          sudo -E apt -y autoremove --purge
          sudo -E apt clean
          sudo -E timedatectl set-timezone "Asia/Shanghai"

      - name: Checkout OpenWrt (repo)
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Free Disk Space (Ubuntu)
        uses: jlumbroso/free-disk-space@main
        with:
          tool-cache: true
          android: true
          dotnet: true
          haskell: true
          large-packages: true
          swap-storage: true

      - name: Update feeds
        run: |
          sed -i 's/#src-git helloworld/src-git helloworld/g' ./feeds.conf.default || true
          ./scripts/feeds update -a
          ./scripts/feeds install -a

      - name: Apply device-specific .config (optional)
        # If you want a reproducible build for ZTE-E8820S, place a prepared .config at configs/zte-e8820s.config in the repo.
        # The step will copy it to .config and run defconfig.
        if: ${{ github.event.inputs.target == 'ZTE-E8820S' }}
        run: |
          mkdir -p configs
          if [ -f "configs/zte-e8820s.config" ]; then
            echo "Applying configs/zte-e8820s.config"
            cp configs/zte-e8820s.config .config
            make defconfig
          else
            echo "No configs/zte-e8820s.config found in repo. Proceeding with default defconfig."
            make defconfig
          fi

      - name: Generate configuration file (fallback)
        if: ${{ github.event.inputs.target != 'ZTE-E8820S' }}
        run: make defconfig

      - name: Download packages
        run: make download -j16 || true

      - name: Compile firmware
        run: |
          # Attempt parallel build; if it fails, run verbose single-job build to capture errors
          make -j$(nproc) || make -j1 V=s
          echo "======================="
          echo "Space usage:"
          echo "======================="
          df -h
          echo "======================="
          du -h --max-depth=1 ./ --exclude=build_dir --exclude=bin || true
          du -h --max-depth=1 ./build_dir || true
          du -h --max-depth=1 ./bin || true

      - name: Prepare artifact
        run: |
          mkdir -p ./artifact/package
          mkdir -p ./artifact/buildinfo
          # Remove package dirs under bin/targets to avoid duplication
          rm -rf $(find ./bin/targets/ -type d -name "packages" 2>/dev/null) || true
          # Copy ipk packages if any
          if [ -d "./bin/packages" ]; then
            cp -rf $(find ./bin/packages/ -type f -name "*.ipk" 2>/dev/null) ./artifact/package/ || true
          fi
          # Copy buildinfo and manifest files
          cp -rf $(find ./bin/targets/ -type f -name "*.buildinfo" -o -name "*.manifest" 2>/dev/null) ./artifact/buildinfo/ || true
          # Ensure firmware images are preserved (bin/targets)
          ls -la ./bin/targets || true

      - name: Upload buildinfo (artifact)
        uses: actions/upload-artifact@v4
        with:
          name: OpenWrt_buildinfo
          path: ./artifact/buildinfo/

      - name: Upload package (artifact)
        uses: actions/upload-artifact@v4
        with:
          name: OpenWrt_package
          path: ./artifact/package/

      - name: Upload firmware (artifact)
        uses: actions/upload-artifact@v4
        with:
          name: OpenWrt_firmware
          path: ./bin/targets/

      - name: Create GitHub Release and upload firmware/packages (optional)
        if: ${{ github.event.inputs.publish_to_release == 'true' }}
        uses: ncipollo/release-action@v1
        with:
          tag: build-${{ github.run_number }}-${{ github.sha }}
          name: OpenWrt build ${{ github.run_number }} (${{ github.sha }})
          # upload the whole targets directory and prepared artifact folders
          files: |
            ./bin/targets/**
            ./artifact/package/**
            ./artifact/buildinfo/**
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
